{
  "version": "1.0",
  "last_updated": "2025-10-27",
  "base_url": "https://www.problematheque-csen.fr",
  "api": {
    "base": "/wp-json/wp/v2",
    "endpoints": {
      "fiches": "/fiche-probleme",
      "cycles": "/cycle",
      "domaines": "/domaine",
      "mots_cles": "/mot-cle",
      "auteurs": "/auteur-fiche"
    }
  },
  "html_selectors": {
    "download_section": {
      "selector": "div.download-section, div.formats-disponibles, section.telechargements, section.formats",
      "description": "Section contenant les liens de téléchargement"
    },
    "download_links": {
      "pdf_enseignant": {
        "selector": "a.format__download-link[href*='.pdf'], a[href*='.pdf'][data-type='enseignant'], a.btn-download[href*='.pdf']",
        "attribute": "href",
        "description": "Lien PDF pour enseignants"
      },
      "docx_enseignant": {
        "selector": "a.format__download-link[href*='.docx'], a[href*='.docx'][data-type='enseignant'], a.btn-download[href*='.docx']",
        "attribute": "href",
        "description": "Lien DOCX pour enseignants"
      },
      "odt_enseignant": {
        "selector": "a.format__download-link[href*='.odt'], a[href*='.odt'][data-type='enseignant'], a.btn-download[href*='.odt']",
        "attribute": "href",
        "description": "Lien ODT pour enseignants"
      },
      "pdf_eleve": {
        "selector": "a.format__download-link[href*='eleve.pdf'], a[href*='.pdf'][data-type='eleve']",
        "attribute": "href",
        "description": "Lien PDF pour élèves"
      }
    },
    "fallback": {
      "all_download_links": "a.format__download-link, a[href$='.pdf'], a[href$='.docx'], a[href$='.odt']",
      "description": "Sélecteur de secours pour tous les liens de téléchargement"
    }
  },
  "rate_limiting": {
    "requests_per_second": 1,
    "burst_max": 5,
    "description": "Limite pour respecter le serveur : 1 requête/seconde max"
  },
  "cache": {
    "enabled": true,
    "ttl_seconds": 86400,
    "file": "cache_problematheque.json",
    "description": "Cache des métadonnées API (24h de validité)"
  },
  "user_agent": "ProblemathequeSkill/1.0 (Educational Purpose; Claude Code Integration)",
  "timeout_seconds": 10
}
