{
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "WebSearch",
      "Skill(**)",
      "SlashCommand(**)",
      "Task(**)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(test:*)",
      "Bash(mkdir:*)",
      "Bash(powershell:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(lualatex:*)",
      "Bash(timeout:*)",
      "Bash(Remove-Item:*)",
      "Bash(git:*)",
      "Skill(pdf)",
      "Skill(tex-document-creator)",
      "Skill(bfcours-latex)",
      "Skill(skill-creator)",
      "Skill(tex-compiling-skill)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(del /f /s /q C:\\)",
      "Bash(git push --force)",
      "Read(**/.env)",
      "Read(.env)",
      "Read(**/.env.*)",
      "Write(**/.env)",
      "Write(.env)",
      "Write(**/.env.*)",
      "Edit(**/.env)",
      "Edit(.env)",
      "Edit(**/.env.*)",
      "Read(**2. Administratif/**)",
      "Read(2. Administratif/**)",
      "Write(**2. Administratif/**)",
      "Write(2. Administratif/**)",
      "Edit(**2. Administratif/**)",
      "Edit(2. Administratif/**)",
      "Glob(**2. Administratif/**)",
      "Glob(2. Administratif/**)",
      "Grep(**2. Administratif/**)",
      "Grep(2. Administratif/**)"
    ],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "competences-server",
    "latex-search-server",
    "document-creator-server",
    "pdf-analyzer-server",
    "encoding-fixer-server"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -File .claude/scripts/play-sound.ps1 .claude/assets/audio/marteau_3_coups.wav",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -File .claude/scripts/play-sound.ps1 .claude/assets/audio/ding_microonde.wav",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write(**/*.{tex,md,py,html,js,json})",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -File .claude/scripts/check-encoding.ps1 \"{{file_path}}\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Task(**)",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/log-agent-errors.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
